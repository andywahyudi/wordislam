---
// Components
// - UI
// import Button from '../components/ui/Button.astro'
// import { Icon } from 'astro-icon/components'

// Imports
const { frontmatter } = Astro.props

//Layout Components
import Layout from './Layout.astro'

// Section Components
import BlogPostHero from '../components/blocks/blog/BlogPostHero.astro'

// Content
// - SEO
const SEO = {
	title: `${frontmatter.title} | WordIslam`,
	description: `${frontmatter.description}`
}
---

<Layout title={SEO.title} description={SEO.description}>
	<BlogPostHero
		tags={frontmatter.tags}
		title={frontmatter.title}
		author={frontmatter.author}
		price={frontmatter.price}
		publishDate={frontmatter.pubDate.toLocaleDateString('en-US', {
			year: 'numeric',
			month: 'long',
			day: 'numeric'
		})}
	/>

	<div class="container mx-auto px-4 py-8">
		<div class="flex flex-wrap">
			<div class="w-full lg:w-2/3 pr-8">
				<div class="post-body basic-text basic-text--lg">
					<slot />
				</div>
			</div>
			<div class="w-full lg:w-1/3">
				<div class="sticky top-8">
					<div class="bg-neutral-100 dark:bg-neutral-800 p-6 rounded-lg">
						<h3 class="text-xl font-semibold mb-4">Advertising</h3>
						<ul class="list-disc pl-5">
							<li>Silakan Dukung Kami dengan Mengisi Space Kosong dengan Iklan. Silakan Hubungi Admin.</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	
</Layout>
<!-- </Layout> -->

<style>
	.post-body {
		@apply mx-auto max-w-3xl px-6 pb-12 lg:pb-24 pt-0;
	}
</style>
